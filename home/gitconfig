[user]
	# デフォルト
	name = Ichinose Yoshihiro
	email = maruisansmai@gmail.com
[includeIf "gitdir:~/ghq/"]
	# 個人用
	path = ~/dotfiles/git/gitconfig_personal
[includeIf "gitdir:~/ghq-karabiner/"]
	# 会社用
	path = ~/dotfiles/git/gitconfig_karabiner
[ghq]
	root = ~/ghq
[ghq "https://github.com/karabiner-inc"]
	root = ~/ghq-karabiner
[ghq "https://kara.git.backlog.jp"]
	root = ~/ghq-karabiner
[ghq "https://gitlab.digitalatelier.info"]
	root = ~/ghq-karabiner
[ghq "https://github.com/Oisix"]
	root = ~/ghq-karabiner
[push]
	default = current
	autoSetupRemote = true
	userForceIfIncludes = true
[core]
	editor = nvim
	autocrlf = input
	whitespace = trailing-space
	#pager = delta
	# 日本語文字化けの解消
	quotepath = false
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[credential]
	helper = store --file ~/.secrets/git/credentials
	helper = cache --timeout 3000
#[interactive]
#	diffFilter = delta --color-only
[delta]
	features = line-numbers decorations
	whitespace-error-style = 22 reverse
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow ul
	file-decoration-style = none
[delta "no-line-number"]
	line-numbers = false
[init]
	defaultBranch = main
[color]
	ui = true
[color "status"]
	added = green
	changed = red
	untracked = yellow
	unmerged = magenta
[advice]
	addIgnoreFile = false
[status]
	# 未追跡のファイルも表示する
	showUntrackedFiles = all
[fetch]
	prune = true
[rebase]
	autosquash = true
[difftool]
	prompt = false
[diff]
	tool = difftatic
	external = difft
[difftool "nvimdiff"]
	cmd = nvim -d "$LOCAL" "$REMOTE"
[difftool "difftatic"]
	cmd = difft "$LOCAL" "$REMOTE"
[commit]
	template = ~/.gitmessage
[alias]
	pushf = push --force-with-lease --force-if-includes
	sync = !git stash --include-untracked && git for-each-ref --format='%(refname:short)' refs/heads | fzf | xargs git switch && git pull && git switch -
	start = commit --allow-empty --no-verify --message "対応開始"
